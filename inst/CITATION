citHeader("To cite UPG in publications use:")

bibentry(
  key = "UPG2023JASA",
  bibtype  = "Article",
  doi      = "10.1080/01621459.2023.2259030",
  title    = "Ultimate Pólya Gamma Samplers – Efficient MCMC for possibly imbalanced binary and categorical data",
  author = c(person("Zens", "Gregor"), person("Frühwirth-Schnatter", "Sylvia"), person("Wagner", "Helga")),
  journal = "Journal of the American Statistical Association",
  year     = "2023",
  url      = "https://www.tandfonline.com/doi/full/10.1080/01621459.2023.2259030"
)


bibentry(
