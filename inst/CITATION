  url = "https://arxiv.org/abs/2101.02506",
  author = c(person("Zens", "Gregor"), person("Frühwirth-Schnatter", "Sylvia"), person("Wagner", "Helga")),
  title = "Efficient Bayesian modeling of binary and categorical data in R: the UPG Package",
  publisher = "arXiv",
  year = "2021"
)

